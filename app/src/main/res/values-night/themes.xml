<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/item_black_bg_dark</item>
        <item name="colorPrimaryVariant">@color/item_black_bg_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_system_navigation_dark</item>
        <!-- System navigation bar color. -->
        <item name="android:navigationBarColor">@color/black_system_navigation_dark</item>
        <!--  Color Hint -->
        <item name="android:textColorHint">@color/input_searchbar_placeholder_dark</item>

        <item name="android:editTextColor">@color/edit_text_color</item>
        <item name="android:editTextStyle">@font/poppins_bold</item>
    </style>
</resources>